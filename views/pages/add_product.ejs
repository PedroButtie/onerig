<div class ="container">

    <h2 class="display-7">Añadir item</h2>

    <form action="/add_product" method="post" style="width: 50%">

        <div class="form-group">
            <label  for="name">Nombre del item:</label>
            <input type="text" name="name" class="form-control">

        </div>

        <div class="form-group">
            <label for="price">Precio del item:</label>
            <input type="number" name="price" class="form-control">
        </div>

        <div class="form-group">
            <label for="image">URL de la imagen:</label>
            <input type="text" name="image" class="form-control">
        </div>
            <!--Elegir entre estos dos-->
        <div class="mb-3">
            <label for="formFile" class="form-label">Subir imagen:</label>
            <input class="form-control" type="file" id="formFile">
        </div>

        <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea name="description" id="description" cols="3" class="form-control"></textarea>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
                Rig
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <label class="form-check-label" for="flexRadioDefault2">
                Placa Individual
            </label>
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Añadir</button>



    </form>

</div>
